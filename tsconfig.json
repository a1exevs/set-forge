{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],

    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Strict mode */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "@app": ["./src/app"],
      "@app/*": ["./src/app/*"],
      "@pages": ["./src/pages"],
      "@pages/*": ["./src/pages/*"],
      "@widgets": ["./src/widgets"],
      "@widgets/*": ["./src/widgets/*"],
      "@features": ["./src/features"],
      "@features/*": ["./src/features/*"],
      "@entities": ["./src/entities"],
      "@entities/*": ["./src/entities/*"],
      "@shared": ["./src/shared"],
      "@shared/*": ["./src/shared/*"],
      "storybook-dir/*": [
        "./.storybook/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "storybook-static"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
